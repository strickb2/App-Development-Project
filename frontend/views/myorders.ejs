<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head'); -%>
        <title>Login Page</title>
    </head>
    <body class="bg-secondary text-white">
        <!-- Navbar -->
        <%- include('partials/header'); -%>
        
        <!-- Container -->
        <div class="container">
            
            <!-- Title -->
            <section class="text-center container">
              <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                  <h1 class="fw-light">My Orders</h1>
                </div>
              </div>
            </section>

            <!-- Table of Order History -->
            <section>
                <table class="table table-striped table-hover table-light" id="myOrdersTable">
                    <!-- Table Header -->
                    <thead class="table-dark">
                        <tr> 
                            <th scope='col'>Order No.</th>
                            <th scope='col'>Date</th>
                            <th scope='col'>Time</th>
                            <th scope='col'>Price</th>
                        </tr>
                    </thead>

                    <!-- Table Body -->
                    <tbody id="MyOrdersTableBody">
                    </tbody>
                </table>
            </section>
    
        <script type="module">
            import { navLoad } from "/javascripts/partials/nav.js";
        </script>
        
        <script type="module" src="/javascripts/page/myOrder.js"></script>
    </body>